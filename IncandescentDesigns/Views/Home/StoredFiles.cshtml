@model IEnumerable<IncandescentDesigns.Models.StoredFileModel>

@{
    ViewBag.Title = "Stored Programs";
}

<h2>Stored Programs</h2>

@if (Model.Count() != 0)
{
    <div class="jumbotron" id="row-form">
        <p class="lead"> </p>
        <div class="container">
            <div class="row" style="display:flex; flex-wrap: wrap;">
                <div class="col-xs-12 col-md-12">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StoredFileId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FileName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoredFileId)
                                </td>
                                <td>
                                    @if (item.FileName != null)
                                    {
                                        @Html.ActionLink(item.FileName, "Download", "Home")
                                        @*<p>@Html.ActionLink("Download", "Download", "Home", new { id = Model.ID }, null)</p>*@
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>

        <div class="container text-center">
            <p>@Html.ActionLink("Back to Download", "Success", "Home")</p>
        </div>

    </div>
}

