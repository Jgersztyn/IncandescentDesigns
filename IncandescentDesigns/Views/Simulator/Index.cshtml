<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "Simulator";
    Layout = null;
}
<div class="container body-content">
    <div class="jumbotron">


        <h2>Welcome to the cube simulator!</h2>
        

        <div class="col-xs-1 col-md-1"></div>
        <div class="col-xs-10 col-md-10">
            <div class="row">

                <div id="sim" class="span12" style="border:8px solid #428bca; width:100%; height:350px;">

                    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
                    @Scripts.Render("~/bundles/three")
                    @Scripts.Render("~/bundles/OrbitControls")
                    @Scripts.Render("~/bundles/simulator")

                </div>

            </div>
        </div>
        <div class="col-xs-1 col-md-1">
            <input class="btn btn-primary" type="button" value="Random Colors" onclick=setPattern("random") />
            <input class="btn btn-primary" type="button" value="Flash"  onclick=setPattern("flash") />
        </div>
        @*<div>
            <p>@Html.ActionLink("2D Simulator", "SimulatorTwo", "Simulator")</p>
        </div>*@
    </div>
</div>
<script>
    var pattern;
    function setPattern(newPattern) {
        pattern = newPattern;
    }
</script>