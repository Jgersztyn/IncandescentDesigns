@model IncandescentDesigns.Models.ContactModels

@{
    ViewBag.Title = "Get in contact with us";
}

@*listens to see if the submit button has been clicked successfully*@
<script>
    function myFunction() {
        document.getElementById("row-form").addEventListener("submit", myFunction);

        alert("Feedback Sent!");
    }
</script>

<div class="jumbotron" id="row-form" onsubmit="myFunction()">

    <p class="lead"> </p>
    <div class="container">
        <div class="row" style="display:flex; flex-wrap: wrap;">
            <div class="col-xs-12 col-md-12">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h3>Contact Us</h3>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-10 col-md-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-10 col-md-10">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-10 col-md-10">
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-10 col-md-10">
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-10 col-md-10">
                            @Html.TextAreaFor(m => m.Comment, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Comment)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-offset-2 col-xs-10 col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="submit" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Return to About Us", "About")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
